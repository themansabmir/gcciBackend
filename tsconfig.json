{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@lib/*": ["lib/*"],
      "@config/*": ["config/*"],
      "@middleware/*": ["middleware/*"],
      "@features/*": ["features/*"],
      "@types/*": ["types/*"]
    },
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
