{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@lib/*": ["src/lib/*"],
      "@config/*": ["src/config/*"],
      "@middleware/*": ["src/middleware/*"],
      "@features/*": ["src/features/*"],
      "@types/*": ["src/types/*"]
    },
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
